<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="LaBuilderApp.PageThing" 
	xmlns:local="clr-namespace:LaBuilderApp" Padding="{x:Static local:Global.PagePadding}">
	<ContentPage.Content>
		<ScrollView Orientation="Vertical" BackgroundColor="#11252D" Padding="6">
			<StackLayout Orientation="Vertical" VerticalOptions="StartAndExpand">
				<Grid HorizontalOptions="Fill" ColumnSpacing="0" RowSpacing="0">
			        <Grid.ColumnDefinitions>
			            <ColumnDefinition Width="150*"/>
			            <ColumnDefinition Width="6"/>
			            <ColumnDefinition Width="40*"/>
			        </Grid.ColumnDefinitions>
			        <Grid.RowDefinitions>
			        	<RowDefinition Height="40" />
			        	<RowDefinition Height="*" />
			        </Grid.RowDefinitions>
					<!-- 1ere ligne -->
					<local:AppearingText TheText="Construction" HorizontalOptions="Center" />
					<Image x:Name="imgClose" Source="{local:ImageResource closewindow.png}" HorizontalOptions="End" WidthRequest="32" HeightRequest="32" Grid.Column="2" />
					<!-- 2nde ligne -->

					<StackLayout Orientation="Vertical" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1">
						<Label Text="{Binding Name}" FontSize="17" HorizontalOptions="Center" TextColor="White" />
						<Image Source="{Binding PictureImage}" Aspect="AspectFit" WidthRequest="4000" HorizontalOptions="Center" />
						<Label Text="{Binding Duree, StringFormat='DurÃ©e de la construction : {0}'}}" FontSize="14" TextColor="White" HorizontalOptions="Center" />
						<Label Text="{Binding DescriptionLabel}" LineBreakMode="WordWrap" FontSize="15" TextColor="White"/>

						<Label Text="Builder" FontSize="14" TextColor="Black" BackgroundColor="White" />
								<Grid WidthRequest="132" HeightRequest="172" Padding="0" RowSpacing="0" ColumnSpacing="0">
						        <Grid.ColumnDefinitions>
						            <ColumnDefinition Width="3"/>
						            <ColumnDefinition Width="3"/>
						            <ColumnDefinition Width="120"/>
						            <ColumnDefinition Width="3"/>
						            <ColumnDefinition Width="3"/>
						        </Grid.ColumnDefinitions>
						        <Grid.RowDefinitions>
						            <RowDefinition Height="3"/>
						            <RowDefinition Height="3"/>
						            <RowDefinition Height="120"/>
						            <RowDefinition Height="40"/>
						            <RowDefinition Height="3"/>
						            <RowDefinition Height="3"/>
						        </Grid.RowDefinitions>

								<BoxView BackgroundColor="#5AA9D3" Grid.Row="0" Grid.RowSpan="6" Grid.Column="0" Grid.ColumnSpan="5" />
								<BoxView BackgroundColor="White" Grid.Row="1" Grid.RowSpan="4" Grid.Column="1" Grid.ColumnSpan="3" />
								<Image Source="{Binding BuilderAvatarImage}" Aspect="AspectFit" WidthRequest="120" HeightRequest="120" HorizontalOptions="Center" VerticalOptions="Start" Grid.Row="2" Grid.Column="2" />
								<Label Text="{Binding Builder}" FontSize="17" TextColor="Black" HorizontalOptions="Center" VerticalOptions="Center" Grid.Row="3" Grid.Column="2" />
								<Button Text="" BackgroundColor="Transparent" CommandParameter="{Binding BuilderCode}" BorderColor="Transparent" BorderWidth="0" Grid.Row="0" Grid.RowSpan="6" Grid.Column="0" Grid.ColumnSpan="5" Clicked="ButtonClicked" />
								</Grid>
						
					</StackLayout>
					
				</Grid>
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>